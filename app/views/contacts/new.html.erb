<%= render "common/header", header_title: 'Contact Me', sub_title: 'Have questions? I have answers (maybe).', pic_path: 'blog_min/contact.jpeg', is_post: false  %>

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

     <p>Want to get in touch with me? Fill out the form below to send me a message and I will try to get back to you as soon as possible!!</p>
    <%= simple_form_for @contact, url: contacts_path do |f| %>
   
   <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.input :name, required: true,label: 'Name', placeholder:"Your Name", id:"name"  %>
        </div>
    </div>
    
    <br>

   <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.input :email, required: true, label: 'Email', placeholder:"Email Address", id:"email" %>
        </div>
    </div>
    
    <br>
   
    <div class="row control-group">
         <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.input :message, as: :text, label: 'Message', placeholder: 'Message', row:'5', id:"message" %>
        </div>
    </div>

    <br>
  
    <div class="hidden">
        <%= f.input :nickname, hint: "left blank" %>
    </div>
    
    <div id="success">
        <div class="row">
            <%= f.submit "Send to Gavin", id: 'success', class: 'btn btn-default' %>
        </div>
    </div>
   
    <% end %>
</div>
</div>

