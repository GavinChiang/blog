<%= render "common/header", header_title: 'Categories', sub_title: 'What are you interested in?', pic_path: 'blog_min/category-bg.jpeg',is_post: false  %>

<% if user_signed_in? && current_user.is_admin? %>
<%= link_to("New Category", new_category_path, class: "btn btn-info btn-xs pull-right") %>
<% end %>

<% @categories.each do |category| %>
<div class="row">
	<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
		<li>
			<h4> <%=link_to (category.title + " (#{category.posts_count})"), category_path(category.id)%> </h4>
			<% if user_signed_in? && current_user.is_admin? %>
			<%= link_to("Edit", edit_category_path(category), class: "btn btn-warning btn-xs") %>
			<%= link_to("Delete", category_path(category.id), method: :delete , class: "btn btn-danger btn-xs",data: { confirm: "Are you sure to delete this categoryï¼Ÿ"}) %>
			<% end %>
			
		</li>
	</div>
</div>
<% end %>