 <header class="intro-header" style="background-image: url(<%= asset_path 'blog/post-bg.jpg' %>)">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1> <%= @post.title %> </h1>
                        <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
                        <span class="meta">Posted by <%= time_ago_in_words(@post.created_at) %> </span>
                        <% if user_signed_in? %>
		| <%= link_to 'Edit', edit_post_path(@post) %>
		| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure to delete this post?'} %>
		<% end %>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                   <%= simple_format(@post.body) %>
                </div>
            </div>
        </div>
        <div id="comments">
		<!-- <h2> <%#= @post.comments.count %> Comments </h2> -->
		<%#= render @post.comments %>
		<h3> Add Comment </h3>
		<%= render "disqus" %>
	</div>
    </article>
