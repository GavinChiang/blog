<%= simple_form_for :post, url: posts_path do |f| %>
<% if @post.errors.any? %>
<div id="errors">
	<h2>
	<%= pluralize(@post.errors.count, "error")  %> prevented this post from saving
	</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li> <%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<p>
	<%= f.label :title %> <br>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :body %> <br>
	<%= f.text_area :body %>
</p>

<p>
	<% @categories = Category.all.map{|c| [c.title, c.id]} %>
    <%= f.input :category_id, :collection => @categories, as: :radio_buttons, :checked => @categories[0] %>

</p>

<p>
<%= f.submit %>
</p>

