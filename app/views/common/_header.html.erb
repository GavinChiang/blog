<header class="intro-header" style="background-image: url(<%= asset_path pic_path %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% if !is_post %>
                <div class="site-heading">
                    <h1> <%= header_title %> </h1>
                    <hr class="small">
                    <h2 class="subheading"><%= sub_title %></h2> 
                </div>
                <% else %>
                <div class="post-heading">
                    <h1> <%= header_title %> </h1>
                    <span class="subheading"><%= sub_title %></span>
                    <span class="meta"> <%= post_time %> </span>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</header>